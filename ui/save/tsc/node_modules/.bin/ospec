#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/runner/work/perfetto/perfetto/ui/node_modules/.pnpm/mithril@2.2.2/node_modules/mithril/ospec/bin/node_modules:/home/runner/work/perfetto/perfetto/ui/node_modules/.pnpm/mithril@2.2.2/node_modules/mithril/ospec/node_modules:/home/runner/work/perfetto/perfetto/ui/node_modules/.pnpm/mithril@2.2.2/node_modules/mithril/node_modules:/home/runner/work/perfetto/perfetto/ui/node_modules/.pnpm/mithril@2.2.2/node_modules:/home/runner/work/perfetto/perfetto/ui/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/runner/work/perfetto/perfetto/ui/node_modules/.pnpm/mithril@2.2.2/node_modules/mithril/ospec/bin/node_modules:/home/runner/work/perfetto/perfetto/ui/node_modules/.pnpm/mithril@2.2.2/node_modules/mithril/ospec/node_modules:/home/runner/work/perfetto/perfetto/ui/node_modules/.pnpm/mithril@2.2.2/node_modules/mithril/node_modules:/home/runner/work/perfetto/perfetto/ui/node_modules/.pnpm/mithril@2.2.2/node_modules:/home/runner/work/perfetto/perfetto/ui/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../mithril/ospec/bin/ospec" "$@"
else
  exec node  "$basedir/../mithril/ospec/bin/ospec" "$@"
fi
